@{
    Layout = null;
}
@using Microsoft.Owin.Security


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    @Styles.Render("~/Content/Home.css")
    <!-- Google Font: Source Sans Pro -->
    <link href="~/Content/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/SignIn.css")" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div class="text-primary">
        <div class="login-logo">
            光點數位官網後台管理系統
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <form action="@Url.Action("SignIn", "Account")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="input-group mb-3">
                        <input type="text" name="UserName" class="form-control" placeholder="使用者帳號">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user-alt"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" name="Password" class="form-control" placeholder="密碼">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-key"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember" name="RememberMe" value="true">
                                <label for="remember">
                                    記住我
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <div class="row justify-content-center">
                    @{
                        var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();

                        <form action="@Url.Action("ExternalLogin", "Account")" method="post">
                            @Html.AntiForgeryToken()
                            <div class="flex-center">
                                <button id="FaceBook" type="submit" class="text-primary btn" name="provider" value="Facebook">
                                    <i class="fab fa-facebook fa-4x icon-3d">
                                    </i>
                                </button>
                                <button id="Google" type="submit" class="text-red btn" name="provider" value="Google">
                                    <i class="fab fa-google-plus-g fa-4x icon-3d">
                                    </i>
                                </button>
                                <a href="@Url.Action("LineLoginDirect","Account")">
                                    <i class="fab fa-line fa-4x icon-3d text-success">
                                    </i>
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <!-- Bootstrap 4 -->
    <!-- AdminLTE App -->
    @Scripts.Render("~/Script/MainScripts")
    <script>
    </script>

</body>
</html>

